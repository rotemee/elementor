{
  // TODO: Copied from the default vite config for React. Maybe we need to tweak it.
  "compilerOptions": {
	"target": "ESNext",
	"useDefineForClassFields": true,
	"lib": ["DOM", "DOM.Iterable", "ESNext"],
	"allowJs": false,
	"skipLibCheck": true,
	"esModuleInterop": false,
	"allowSyntheticDefaultImports": true,
	"strict": true,
	"forceConsistentCasingInFileNames": true,
	"module": "ESNext",
	"moduleResolution": "Node",
	"resolveJsonModule": true,
//	"isolatedModules": true, // TODO: Causes some compilation errors. Do we need this?
	"noEmit": true,
	"jsx": "react-jsx",
  }
}
